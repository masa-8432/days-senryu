<div class="container">

  <h2>この投稿にいいねしたユーザー</h2>

  <% if @post.count != 0 %>
    <% @post.each do |user| %>
      <div class="row justify-content-center">
        <div class="col-2">
          <%= link_to user_path(user) do %>
           <%= user.name %>さん
          <% end %>
        </div>
        <p class"col-1">投稿数</p>
        <div class="col-2">
          <%= link_to post_user_path(user) do %>
            <%= user.posts.count %>句
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <% else %>
    <div class="no-message-box">
       <p class="text-center">まだいません</p>
    </div>
  <% end %>

  <!--ページネーション-->
  <%= render 'layouts/pager', obj: @post %>

</div>