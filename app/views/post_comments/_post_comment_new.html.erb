
<div class="mt-3 mb-5">
  <%= form_with(model:[post, comment], url: post_post_comments_path(post.id), method: :post, remote: true, data: {"turbolinks" => false}) do |f| %>
    <%= f.text_area :comment, class:"col-10 form-control", placeholder: "コメントを入力してください" %>
    <%= f.submit '投稿', class:"col-1 btn btn-danger form-control" %>
  <% end %>
</div>


<!--コメント数が0じゃなかったらコメントを一覧表示する-->
  <% if post.post_comments.count != 0 %>

    <div class="row comment-index mb-5">
      <% post.post_comments.each do |comment| %>
        <!--コメント一覧表示-->
        <div class="col-2">
          <%= link_to user_path(comment.user.name) do %>
            <%= comment.user.name %>さん
          <% end %>
        </div>
        <div class="col-2">
          <%= comment.updated_at.strftime("%Y-%m-%d %H:%M") %>
        </div>
        <div class="col-6">
          <%= comment.comment %>
        </div>

      <!--コメント投稿者のみ編集・削除ボタン表示-->
      <% if comment.user_id == current_user.id %>
        <div class="col-1">
          <%= link_to edit_post_post_comment_path(post.id,comment.id), method: :get do %>
            <i class="fas fa-edit"></i>
          <% end %>

          <%= link_to post_post_comment_path(post.id,comment.id), method: :delete, remote: true, data: {"turbolinks" => false}, "data-confirm" => "本当に削除しますか？" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      <% else %>
        <div class="col-1"></div>
        <div class="col-1"></div>
      <% end %>

  <% end %>

  <% else %>
    <!--コメント数が0だったら表示-->
    <div class="no-message-box">
      <p class="text-center">コメントはありません</p>
    </div>

  <% end %>

