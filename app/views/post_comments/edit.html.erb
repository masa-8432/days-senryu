<!--エラーメッセージ-->
<%= render 'layouts/errors', obj: @comment %>

<div class="container">
  <div class="row justify-content-start login">
    <div class="col-6">
    <h2>コメント編集</h2>
    </div>
  </div>

  <!--編集フォーム-->
  <div class="comment">
    <%= form_with(model:[@post, @comment], url: post_post_comment_path(@post.id), method: :patch, local: true) do |f| %>
      <%= f.text_area :comment, class:"col-10 form-control", placeholder: "コメントを入力してください" %>
      <%= f.submit '更新', class:"col-1 btn btn-danger form-control" %>
    <% end %>
  </div>

  <%= link_to '戻る', post_path(@post.id), method: :get %>

</div>