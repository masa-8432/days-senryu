<div class="container">


<div class="row justify-content-center login">
<div class="col-6">
<h2>ログイン</h2>
</div>
</div>

<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>

  <div class="row form-group justify-content-center">
    <label class="col-2">メールアドレス</label>
    <div class="col-4">
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row form-group justify-content-center">
    <label class="col-2">パスワード</label>
    <div class="col-4">
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="row form-group justify-content-center">
      <div class="col-6">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    </div>
  <% end %>

  <div class="row field justify-content-center">
    <div class="col-2">
    <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<div class="row field justify-content-center">
    <div class="col-6">
     <%= link_to '会員登録はコチラ', new_user_registration_path %>
  </div>
  </div>

</div>