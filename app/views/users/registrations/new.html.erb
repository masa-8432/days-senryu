<!--エラーメッセージ-->
<%= render 'users/shared/error_messages', resource: resource %>

<div class="container">

  <div class="row justify-content-center login">
    <div class="col-6">
      <h2>会員登録</h2>
    </div>
  </div>

  <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>

    <div class="row form-group justify-content-center">
      <label class="col-2">ニックネーム</label>
      <div class="col-3">
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <label class="col-2">性別</label>
      <div class="col-3">
        <%= f.select :gender, User.genders.keys, { prompt: "選択してください"}, { class: "form-control" } %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <label class="col-2">年齢</label>
      <div class="col-3">
        <%= f.select :age, User.ages.keys, { prompt: "選択してください"}, { class: "form-control" } %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <label class="col-2">メールアドレス</label>
      <div class="col-3">
        <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <label class="col-2">パスワード</label>
      <div class="col-3">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <label class="col-2">パスワード確認</label>
      <div class="col-3">
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <div class="col-2">
        <%= f.submit "登録", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>

</div>