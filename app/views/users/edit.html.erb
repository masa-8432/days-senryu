<!--エラーメッセージ-->
<%= render 'layouts/errors', obj: @user %>

<div class="container">

  <div class="row justify-content-center login">
    <div class="col-6">
      <h2>会員登録</h2>
    </div>
  </div>

  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>

    <div class="row form-group justify-content-center">
      <label class="col-2">ニックネーム</label>
      <div class="col-3">
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <label class="col-2">性別</label>
      <div class="col-3">
        <%= f.select :gender, User.genders.keys, { prompt: "選択してください"}, { class: "form-control" } %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <label class="col-2">年齢</label>
      <div class="col-3">
        <%= f.select :age, User.ages.keys, { prompt: "選択してください"}, { class: "form-control" } %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <label class="col-2">メールアドレス</label>
      <div class="col-3">
        <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
      </div>
    </div>

    <div class="row form-group justify-content-center">
      <div class="col-2">
        <%= f.submit "変更", class: "btn btn-primary btn-lg" %>
      </div>
    </div>

  <% end %>
</div>